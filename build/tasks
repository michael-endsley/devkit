#!/bin/bash

# A library of functions to be called by the 'dev' script to accomplish
# various development-related tasks

start_service() {
  docker-compose -f $repos_path/$target/docker-compose.yml up
}

stop_service() {
  docker-compose -f $repos_path/$target/docker-compose.yml stop
}

